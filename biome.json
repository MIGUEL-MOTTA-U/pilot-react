{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"include": ["scripts/**/*.js", "src/**/*.js"],
		"ignore": ["package.json"]
	},
	"organizeImports": {
		"include": ["scripts/**/*.js", "src/**/*.js"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"recommended": true
			}
		}
	}
}
